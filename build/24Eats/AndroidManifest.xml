<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp.main.twentyfoureats"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="applic.GlobalApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_eats"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBQoyR-YZVqVujbDaNKZvAK0v09UM4cCL" />

        <activity
            android:name=".Form"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListView"
            android:label="@string/title_activity_list_view"
            android:parentActivityName=".Form" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp.main.twentyfoureats.Form" />
        </activity>
        <activity
            android:name=".ListItems"
            android:label="@string/title_activity_list_view"
            android:parentActivityName=".Form" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp.main.twentyfoureats.Form" />
        </activity>
        <activity
            android:name=".List_Items"
            android:label="@string/title_activity_list__items" >
        </activity>
        
        <activity
            android:name=".Settings">
        </activity>
        
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
			android:theme="@android:style/Theme.Translucent"
			android:parentActivityName=".Form" 

			>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp.main.twentyfoureats.Form" />
        </activity>
        
    </application>

</manifest>