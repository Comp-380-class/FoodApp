<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_gradient"
    tools:context="comp.main.twentyfoureats.Form" >


    <Button
        android:id="@+id/UseButton"
        android:layout_width="175dp"
        android:layout_height="159dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/current_location"
        android:onClick="switchActivityWithIntent"
         />
    
    <TextView 
        android:id="@+id/or"
        android:layout_width="24dp"
    	android:layout_height="24dp"
        android:text="or"
        android:layout_below="@+id/UseButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor ="#ff000099"
        android:ems="24"
        android:textStyle="bold"
        />
    
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_below="@+id/or"
    android:layout_marginTop="16dp"
    android:id="@+id/LocationBar" >
    <EditText
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33ffffff"
        android:textColor ="#ffff2a00"
        android:hint="Input Address"
        android:padding="8dp"
        android:ems="12" >

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/LocButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_search"
        android:layout_toRightOf="@+id/Location" />
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/within"
        android:layout_width="150dp"
    	android:layout_height="wrap_content"
        android:text="minutes to restaurant"
        android:layout_below="@+id/LocationBar"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor ="#ffff2a00"
        android:ems="12"
        />
    
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_below="@+id/within"
    android:layout_marginTop="8dp"
    android:id="@+id/distanceBar" >
    <EditText
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33ffffff"
        android:textColor ="#ffff2a00"
        android:text="5"
        android:padding="8dp"
        android:ems="12" >

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/DistButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_search"
        android:layout_toRightOf="@+id/distance" />
    </RelativeLayout>

    
    <ProgressBar
        android:id="@+id/spinnerProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LocationBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:visibility="gone" />

