<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_gradient"
    tools:context="comp.main.twentyfoureats.Form" >
    
    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
		android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/backgradient"
        android:clickable="true"/>
	<ImageView
        android:id="@+id/rest_by_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/get_restaurant_by"
        />
    <Button
        android:id="@+id/UseButton"
        android:layout_width="150dp"
        android:layout_height="139dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rest_by_text" 
        android:background="@drawable/current_location"
        android:onClick="switchActivityWithIntent" />

    <TextView
        android:id="@+id/or"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/UseButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ems="24"
        android:hint="@string/or"
        android:text="or"
        android:textColor="#ff000099"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/LocationBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp" >

        <EditText
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33ffffff"
            android:ems="12"
            android:singleLine="true"
            android:hint="Input Address"
            android:padding="8dp"
            android:textColor="#ffff2a00" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/LocButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp" 
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Location"
            android:background="@drawable/get_address" />
    </RelativeLayout>

    
    <ProgressBar
        android:id="@+id/spinnerProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity = "center_vertical|center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/within"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LocationBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ems="12"
        android:text="minutes to restaurant"
        android:textColor="#ffff2a00" />

    <RelativeLayout
        android:id="@+id/distanceBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/within"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp" >

        <EditText
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33ffffff"
            android:ems="12"
            android:hint="@string/details_hint"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="#ffff2a00" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/DistButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/distance"
            android:layout_marginTop="4dp" 
            android:background="@drawable/get_addy_time" />
    </RelativeLayout>


    <!--
     	<Button
        android:id="@+id/OptionsButton"
        android:layout_width="82dp"
        android:layout_height="84dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/more_options"
        android:layout_below="@+id/distanceBar" />
    -->

    <fragment
        android:id="@+id/fragment1"
        android:name="newAdsAPI.AdFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>