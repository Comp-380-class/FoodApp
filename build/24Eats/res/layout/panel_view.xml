<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/panel"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/details_gradient"
		android:layout_below="@+id/btnPanel"
		android:padding="10dp">

		<TextView android:id="@+id/hours" android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				 />
		<TextView android:id="@+id/tilClose" android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_toLeftOf="@+id/timeLeft"
				android:layout_alignBaseline="@+id/timeLeft"
				android:layout_marginRight="3dp"
				android:textColor="#FF999999"
				android:textSize="12sp"
				 />
		<TextView android:id="@+id/timeLeft" android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_alignParentRight="true"
				android:textStyle="italic"
				android:textColor="#FF1259b4"
				 />
		<TextView android:id="@+id/address" android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_below="@+id/hours"
				 />
		<TextView android:id="@+id/phone" android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_below="@+id/address"
				/>
		<!-- <TextView android:id="@+id/rating" android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_alignParentRight="true"
				android:layout_below="@+id/address" 
				/> -->
				
		<ImageView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:layout_below="@+id/address" 
         />
		
		<!-- <TextView android:id="@+id/price" android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_below="@+id/rating"
				android:layout_alignParentRight="true"
				 /> -->
				 
		<ImageView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating"
		android:layout_alignParentRight="true" 
         />
		
		<TextView android:id="@+id/website" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColorLink="#FF1259b4"
				android:textColor="#FF1259b4" 
				android:layout_below="@+id/phone"
				android:clickable="true"
				android:onClick="goToUrl"
				 />
	</RelativeLayout>