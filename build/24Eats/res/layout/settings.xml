<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgradient" 
    android:padding="16dp">
    
	<TextView
	    android:id="@+id/run_right_away"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="14dp"
	    android:text="@string/settings_launch"
	    android:textColor="#FFFFFFFF" />

    <ToggleButton
        android:id="@+id/toggleRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFFFF"
        android:clickable="true"/>
    
     <TextView
         android:id="@+id/preload_results"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/toggleRun"
         android:layout_marginTop="14dp"
         android:text="@string/settings_preload"
         android:textColor="#FFFFFFFF" />

    <ToggleButton
        android:id="@+id/togglePreload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleRun"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFFFF"
        android:clickable="true" />
    
    <TextView
        android:id="@+id/set_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/togglePreload"
        android:layout_marginTop="14dp"
        android:hint="@string/details_hint"
        android:text="@string/settings_set_time"
        android:textColor="#FFFFFFFF" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/togglePreload"
        android:background="#2a4498"
        android:ems="8"
        android:hint="@string/details_hint"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="#FFFFFFFF" >

        <requestFocus/>
    </EditText>

</RelativeLayout>
